{
  "$schema": "https://vega.github.io/schema/vega/v4.json",
  "width": 600,
  "height": 300,
  "padding": 5,

  "signals": [
    {
      "name": "teamFilter",
      "value": "A",
      "bind": {
        "input": "select",
        "options": ["A", "B", "C"],
        "labels": ["Team A", "Team B", "Team C"],
        "name": "Select team: "
      }
    }
  ],

  "data": [
    {
      "name": "raw_data",
      "values": [
        {"team": "A", "timestamp": "2024-05-09T00:00:00Z"},
        {"team": "A", "timestamp": "2024-05-09T00:10:00Z"},
        {"team": "A", "timestamp": "2024-05-09T00:50:00Z"},
        {"team": "B", "timestamp": "2024-05-09T00:25:00Z"},
        {"team": "B", "timestamp": "2024-05-09T01:10:00Z"},
        {"team": "C", "timestamp": "2024-05-09T01:05:00Z"},
        {"team": "C", "timestamp": "2024-05-09T01:20:00Z"},
        {"team": "A", "timestamp": "2024-05-09T01:40:00Z"}
      ],
      "transform": [
        {
          "type": "filter",
          "expr": "datum.team === teamFilter"
        },
        {
          "type": "formula",
          "as": "time_bin",
          "expr": "floor(datetime(datum.timestamp).getTime() / (30 * 60 * 1000)) * (30 * 60 * 1000)"
        },
        {
          "type": "aggregate",
          "groupby": ["time_bin"],
          "ops": ["count"],
          "as": ["count"]
        },
        {
          "type": "formula",
          "as": "time",
          "expr": "toDate(datum.time_bin)"
        }
      ]
    }
  ],

  "scales": [
    {
      "name": "x",
      "type": "time",
      "domain": {"data": "raw_data", "field": "time"},
      "range": "width",
      "nice": {"interval": "minute", "step": 30},
      "zero": false,
      "clamp": true
    },
    {
      "name": "y",
      "type": "linear",
      "domain": {"data": "raw_data", "field": "count"},
      "range": "height",
      "nice": true,
      "zero": true
    }
  ],

  "axes": [
    {"orient": "bottom", "scale": "x", "format": "%H:%M"},
    {"orient": "left", "scale": "y"}
  ],

  "marks": [
    {
      "type": "line",
      "from": {"data": "raw_data"},
      "encode": {
        "enter": {
          "x": {"scale": "x", "field": "time"},
          "y": {"scale": "y", "field": "count"},
          "stroke": {"value": "steelblue"},
          "strokeWidth": {"value": 2}
        }
      }
    },
    {
      "type": "symbol",
      "from": {"data": "raw_data"},
      "encode": {
        "enter": {
          "x": {"scale": "x", "field": "time"},
          "y": {"scale": "y", "field": "count"},
          "size": {"value": 50},
          "fill": {"value": "steelblue"}
        }
      }
    }
  ],

  "interaction": {"bind": "scales"}
}
