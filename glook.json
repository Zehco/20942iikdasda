{
  "$schema": "https://vega.github.io/schema/vega@4.json",
  "description": "Failed Services by Team",
  "data": [
    {
      "name": "raw_data",
      "url": {
        "index": "hi_feed",
        "body": {
          "size": 10000,
          "query": {
            "bool": {
              "must": [],
              "filter": [
                {
                  "range": {
                    "@timestamp": "%timefilter%"
                  }
                }
              ]
            }
          },
          "_source": ["@timestamp", "failed_svc"]
        }
      },
      "format": {"type": "json", "property": "hits.hits.*._source"},
      "transform": [
        {
          "type": "formula",
          "as": "team",
          "expr": "/* --- YOUR TEAM MAPPING LOGIC HERE --- */"
        },
        {
          "type": "filter",
          "expr": "selectedTeam === 'All' || selectedTeam === null || datum.team === selectedTeam"
        }
      ]
    },
    {
      "name": "aggregated_data",
      "source": "raw_data",
      "transform": [
        {
          "type": "aggregate",
          "groupby": ["time_bin", "team"],
          "fields": ["failed_svc"],
          "ops": ["count"],
          "as": ["count"]
        },
        {
          "type": "timeunit",
          "field": "@timestamp",
          "units": ["minutes"],
          "step": 30,
          "as": "time_bin"
        }
      ]
    },
    {
      "name": "team_options_data",
      "source": "raw_data",
      "transform": [
        {
          "type": "aggregate",
          "groupby": ["team"],
          "fields": ["team"],
          "ops": ["count"],
          "as": ["team_count"]
        },
        {
          "type": "collect"
        },
        {
          "type": "formula",
          "as": "value",
          "expr": "datum.team"
        },
        {
          "type": "formula",
          "as": "label",
          "expr": "datum.team"
        }
      ]
    }
  ],
  "signals": [
    {
      "name": "selectedTeam",
      "value": "All",
      "bind": {
        "input": "select",
        "options": [
          {"value": "All", "label": "All"},
          {"signal": "team_options_data", "labelField": "label", "valueField": "value"}
        ],
        "labels": "Select Team"
      }
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "time",
      "domain": {"data": "aggregated_data", "field": "time_bin"},
      "range": "width"
    },
    {
      "name": "y",
      "type": "linear",
      "domain": {"data": "aggregated_data", "field": "count"},
      "range": "height",
      "nice": true
    },
    {
      "name": "color",
      "type": "ordinal",
      "domain": {"data": "aggregated_data", "field": "team"},
      "range": "category10"
    }
  ],
  "axes": [
    {"orient": "bottom", "scale": "x", "title": "Time (30 Minute Intervals)"},
    {"orient": "left", "scale": "y", "title": "Count"}
  ],
  "marks": [
    {
      "type": "line",
      "from": {"data": "aggregated_data"},
      "encode": {
        "enter": {
          "x": {"scale": "x", "field": "time_bin"},
          "y": {"scale": "y", "field": "count"},
          "stroke": {"scale": "color", "field": "team"},
          "strokeWidth": {"value": 2}
        },
        "update": {
          "opacity": {"value": 1}
        },
        "hover": {
          "opacity": {"value": 0.7}
        }
      }
    }
  ],
  "config": {
    "mark": {"invalid": null},
    "axis": {"labelFontSize": 10, "titleFontSize": 12},
    "legend": {"labelFontSize": 10, "titleFontSize": 12}
  }
}
